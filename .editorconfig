# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf

[composer.json]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = false

[*.{neon,neon.dist}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[{.env,.env.*}]
trim_trailing_whitespace = true

[*.md]
indent_size = 2
# 공백 2개로 `br` 처리를 위해 줄 끝 공백은 제거하지 않아야 함
trim_trailing_whitespace = false
